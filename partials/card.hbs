{{!--
Re-usable card for linking to posts
--}}
<article class="flex w-full p-4 {{#if featured}} lg:w-full xl:w-2/3 {{else}} lg:w-1/2 xl:w-1/3 {{/if}} {{post_class}}">
    <!-- component -->
    <div class="tracking-wide bg-white rounded-lg shadow-2xl" >
        {{#if feature_image}}
            <div class="md:flex-shrink-0">
                <a href="{{url}}">
                    <img src="{{img_url feature_image size="l"}}" alt="{{title}}" class="object-cover object-center w-full h-64 rounded-lg rounded-b-none">
                </a>
            </div>
        {{/if}}
        <div class="px-4 py-2 mt-2">
            <h2 class="text-2xl font-bold tracking-normal text-gray-800"><a href="{{url}}" >{{title}}</a></h2>
            <div class="mt-2 mb-4">
                {{#foreach tags}}
                    <a class="inline px-2 py-1 text-sm text-gray-700 lowercase bg-gray-300 rounded-full" href="{{url}}">{{name}}</a>
                {{/foreach}}
            </div>
            <p class="px-2 mr-1 text-sm text-gray-700">
                {{excerpt}}
            </p>
            <div class="flex items-center justify-between mx-6 mt-2">
                <a href="{{url}}" class="-ml-3 text-xs text-blue-500 ">Read More</a>
                <a href="{{url}}" class="flex text-gray-700">
                    <svg fill="none" viewBox="0 0 24 24" class="w-6 h-6 text-blue-500" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                    </svg>
                    {{reading_time}}
                </a>
            </div>
            {{#if authors}}
                {{#foreach authors}}
                    <div class="flex items-center my-3 -ml-3 author">
                        <div class="user-logo">
                            <img class="object-cover w-12 h-12 mx-4 rounded-full shadow" src="{{img_url profile_image size="xs"}}" alt="{{name}}">
                        </div>
                        <h2 class="text-sm tracking-tighter text-gray-900">
                            <a href="{{url}}">By {{name}}</a> <span class="text-gray-600"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time></span>
                        </h2>
                    </div>
                {{/foreach}}
            {{/if}}
        </div>
    </div>
</article>
