
{{!< default}}

<header class="pb-4 mb-8 bg-gray-200 shadow-lg" >
  <div class="mx-auto shadow-xl max-w-7xl">
    <div class="flex items-center justify-center h-64"> 
      <div class="flex flex-col items-center">
        <div class="px-4 py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <h1 class="text-4xl font-bold leading-tight text-gray-700">{{statusCode}}</h1>
        </div>
        <p class="mt-6 text-lg text-gray-700">{{message}}</p> 
        <p class="mt-6 text-base text-blue-700"><a href="{{@site.url}}">Go to the front page</a></p>
      </div>
    </div>
  </div>
</header>

{{#if errorDetails}}
<h4 class="prose">Theme errors:</h4>
<table class="table-auto">
  <thead>
    <tr>
      <th class="px-4 py-2">Rule</th>
      <th class="px-4 py-2">Ref</th>
      <th class="px-4 py-2">Message</th>
    </tr>
  </thead>
  <tbody>
    {{#foreach errorDetails}}
        {{#foreach failures}}
        <span class="gh-error-stack-file"><strong>Ref:</strong> {{ref}}</span><br>
        <span class="gh-error-stack-file"><strong>Message:</strong> {{message}}</span>
            <tr>
                <td class="px-4 py-2 border">{{{rule}}}</td>
                <td class="px-4 py-2 border">{{ref}}</td>
                <td class="px-4 py-2 border">{{message}}</td>
            </tr>
        {{/foreach}}
    {{/foreach}}
  </tbody>
</table>
{{/if}}
