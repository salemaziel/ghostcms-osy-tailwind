{{!< default}}

{{#author}}

<header class="bg-gray-800 shadow-lg w-full">
    {{> header-background background=cover_image}} {{!--Special header-image.hbs partial to generate the background image--}}
        {{navigation}}

        <div class="mx-auto max-w-7xl flex flex-row items-center">
            <div class="p-4 bg-white lg:flex lg:items-center lg:justify-between rounded-lg opacity-75 lg:w-2/3 h-64">
                <div class="flex-1 min-w-0">
                    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:leading-9 sm:truncate">
                        {{name}}
                    </h2>

                    {{#if location}}
                    <div class="flex items-center mt-2 text-sm leading-5 text-gray-500 sm:mr-6">
                        <svg class="flex-shrink-0 mr-1.5 h-6 w-6 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd"
                                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                clip-rule="evenodd" />
                        </svg>
                        {{location}}
                    </div>
                    {{/if}}

                    <p class="text-gray-700 lg:max-w-md mt-4">
                        {{bio}}
                    </p>

                    <div class="flex items-center -mx-2 mt-6">
                        {{#if website}}
                            <a class="fill-current w-6 h-6 mx-2 text-gray-500 transition duration-150 ease-in-out rounded-full hover:text-black focus:outline-none focus:text-black focus:bg-gray-500"
                                href="{{website}}" title="Web Site" target="_blank" rel="noopener">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd"
                                        d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z"
                                        clip-rule="evenodd" />
                                </svg>
                            </a>
                        {{/if}}
                        {{#if facebook}}
                            <a class="fill-current w-6 h-6 mx-2 text-gray-500 transition duration-150 ease-in-out border-2 border-transparent rounded-full hover:text-black focus:outline-none focus:text-black focus:bg-gray-500"
                                href="{{facebook_url}}" title="Facebook" target="_blank" rel="noopener">{{> icons/facebook}}</a>
                        {{/if}}
                        {{#if twitter}}
                            <a class="fill-current w-6 h-6 mx-2 text-gray-500 transition duration-150 ease-in-out border-2 border-transparent rounded-full hover:text-black focus:outline-none focus:text-black focus:bg-gray-500"
                                href="{{twitter_url}}" title="Twitter" target="_blank" rel="noopener" >{{> icons/twitter}}</a>
                        {{/if}}
                    </div>
                </div>
            </div>

            <div class="mt-8 lg:mt-0 lg:w-1/3">
                <div class="flex items-center justify-center lg:justify-end">
                    <div class="max-w-lg">
                        <img class="w-full h-64 object-cover object-center rounded-lg" src="{{img_url profile_image size="m"}}" alt="{{name}}">
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

{{/author}}

<main>
  <div class="justify-center block md:flex-wrap md:flex">
    {{#foreach posts visibility="all"}}
      {{> "card"}} {{!-- partials/card.hbs --}}
    {{/foreach}}
  </div>
</main>
