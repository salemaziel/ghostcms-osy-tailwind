{{!< default}}

{{#tag}}

<header class="bg-gray-800 shadow-lg w-full">
    {{> header-background background=feature_image}}
    {{!--Special header-image.hbs partial to generate the background image--}}
        {{navigation}}

        <div class="mx-auto max-w-7xl">
            <div class="p-4 bg-white lg:flex lg:items-center lg:justify-between rounded-lg opacity-75">
                <div class="flex-1 min-w-0">
                    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:leading-9 sm:truncate">
                        {{name}}
                    </h2>
                    <p class="mt-6 text-gray-700">
                        {{#if description}}
                            {{description}}
                        {{else}}
                            A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                        {{/if}}
                    </p>
                </div>
            </div>
        </div>
    </div>
</header>

{{/tag}}

<main>
  <div class="justify-center block md:flex-wrap md:flex">
    {{#foreach posts visibility="all"}}
      {{> "card"}} {{!-- partials/card.hbs --}}
    {{/foreach}}
  </div>
</main>

